{
  "name": "atlp-pulse-backend",
  "version": "1.0.0",
  "description": "ATLP app backend",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run seed & tsc && node dist/index",
    "seed": "ts-node-dev --transpile-only --no-notify --exit-child src/seeders/index.ts",
    "dev": "ts-node-dev --transpile-only --no-notify --exit-child src/index.ts",
    "build": "tsc",
    "test": " npm run seed && tsc && nyc mocha",
    "lint": "eslint src --fix .",
    "format": "npx prettier --write .",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "kill": "sudo kill -9 $(sudo lsof -t -i :4000)"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/test/**/*.spec.ts",
    "require": "ts-node/register",
    "exit": true,
    "timeout": 10000
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": "true",
    "exclude": [
      "dist",
      "coverage",
      "src/seeders"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/atlp-pulse-backend.git"
  },
  "keywords": [
    "ed-tech",
    "graphql",
    "typescript"
  ],
  "author": "ceelogre",
  "license": "ISC",
  "bugs": {
    "url": "git+https://github.com/atlp-rwanda/atlp-pulse-backend.git"
  },
  "homepage": "https://github.com/atlp-rwanda/atlp-pulse-backend#readme",
  "dependencies": {
    "@graphql-tools/merge": "^8.3.3",
    "@graphql-tools/schema": "^9.0.10",
    "@graphql-tools/utils": "^10.0.4",
    "@octokit/graphql": "^7.0.1",
    "@octokit/rest": "^19.0.13",
    "apollo-server": "^3.10.2",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.30.1",
    "date-fns": "^2.29.2",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "generate-password": "^1.7.0",
    "graphql": "^16.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.11.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.17.1",
    "mongoose": "^6.6.1",
    "node-fetch": "^2.6.12",
    "nodemailer": "^6.7.8",
    "normalize-mongoose": "^1.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "ts-node-dev": "^2.0.0",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^8.0.3",
    "@types/node": "^13.13.52",
    "@types/node-fetch": "^2.6.4",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "prettier": "2.7.1",
    "pretty-quick": "^3.1.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
